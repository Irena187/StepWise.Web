@{
    ViewData["Title"] = "Admin Dashboard - StepWise";
}

<div class="hero-section bg-dark text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-8 mx-auto text-center">
                <div class="hero-content">
                    <div class="mb-4">
                        <i class="fas fa-tools fa-4x mb-3 text-white-50"></i>
                    </div>
                    <h1 class="display-4 fw-bold mb-3">Admin Dashboard</h1>
                    <p class="lead fs-5 mb-4">
                        Manage users, oversee content, and ensure the StepWise platform runs smoothly.
                    </p>
                    <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
                        <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-light btn-lg px-4 py-3">
                            <i class="fas fa-users-cog me-2"></i> Manage Users
                        </a>
                        <a asp-area="Admin" asp-controller="Reports" asp-action="Index" class="btn btn-outline-light btn-lg px-4 py-3">
                            <i class="fas fa-chart-bar me-2"></i> View Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">

    <!-- Admin Quick Actions -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-5">Quick Admin Actions</h2>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-primary mb-3">
                        <i class="fas fa-user-shield fa-3x"></i>
                    </div>
                    <h4 class="card-title">User Management</h4>
                    <p class="card-text">Add, remove, or assign roles to users. Keep your community organized and secure.</p>
                    <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="btn btn-sm btn-outline-primary mt-2">Go</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-success mb-3">
                        <i class="fas fa-database fa-3x"></i>
                    </div>
                    <h4 class="card-title">Content Review</h4>
                    <p class="card-text">Monitor and review created career paths to ensure quality and accuracy.</p>
                    <a asp-area="Admin" asp-controller="CareerPaths" asp-action="Pending" class="btn btn-sm btn-outline-success mt-2">Review</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-danger mb-3">
                        <i class="fas fa-flag fa-3x"></i>
                    </div>
                    <h4 class="card-title">Reported Content</h4>
                    <p class="card-text">View and respond to reports from users about inappropriate or inaccurate content.</p>
                    <a asp-area="Admin" asp-controller="Reports" asp-action="Index" class="btn btn-sm btn-outline-danger mt-2">View</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Platform Stats -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="mb-2"><i class="fas fa-users fa-2x text-primary"></i></div>
                            <h4 class="text-primary mb-0">Users</h4>
                            <p class="text-muted">Platform members</p>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-2"><i class="fas fa-map fa-2x text-success"></i></div>
                            <h4 class="text-success mb-0">Career Paths</h4>
                            <p class="text-muted">Published & pending</p>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-2"><i class="fas fa-exclamation-circle fa-2x text-warning"></i></div>
                            <h4 class="text-warning mb-0">Reports</h4>
                            <p class="text-muted">Unresolved flags</p>
                        </div>
                        <div class="col-md-3">
                            <div class="mb-2"><i class="fas fa-server fa-2x text-info"></i></div>
                            <h4 class="text-info mb-0">System Health</h4>
                            <p class="text-muted">Uptime & logs</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s ease-in-out;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .shadow-sm {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important;
        }

        .border-0 {
            border: 0 !important;
        }
    </style>
}
