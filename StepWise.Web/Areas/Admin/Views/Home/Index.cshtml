@{
    ViewData["Title"] = "Admin Dashboard - StepWise";
}

<div class="hero-section bg-dark text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-8 mx-auto text-center">
                <div class="hero-content">
                    <div class="mb-4">
                        <i class="fas fa-tools fa-4x mb-3 text-white-50"></i>
                    </div>
                    <h1 class="display-4 fw-bold mb-3">Admin Dashboard</h1>
                    <p class="lead fs-5 mb-4">
                        Manage users, oversee content, and ensure the StepWise platform runs smoothly.
                    </p>
                    <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
                        <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" class="btn btn-light btn-lg px-4 py-3">
                            <i class="fas fa-users-cog me-2"></i> Manage Users
                        </a>
                        <a asp-area="Admin" asp-controller="CareerPathManagement" asp-action="Index" class="btn btn-outline-light btn-lg px-4 py-3">
                            <i class="fas fa-chart-bar me-2"></i> Manage Career Paths
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Admin Quick Actions -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-5">Quick Admin Actions</h2>
        </div>

        <div class="d-flex justify-content-center">
            <div class="row justify-content-center" style="max-width: 900px;">
                <div class="col-md-6 col-lg-5 mb-4">
                    <div class="card h-100 text-center border-0 shadow-sm">
                        <div class="card-body">
                            <div class="text-primary mb-3">
                                <i class="fas fa-user-shield fa-3x"></i>
                            </div>
                            <h4 class="card-title">User Management</h4>
                            <p class="card-text">Add, remove, or assign roles to users. Keep your community organized and secure.</p>
                            <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" class="btn btn-sm btn-outline-primary mt-2">Go</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-5 mb-4">
                    <div class="card h-100 text-center border-0 shadow-sm">
                        <div class="card-body">
                            <div class="text-success mb-3">
                                <i class="fas fa-database fa-3x"></i>
                            </div>
                            <h4 class="card-title">Content Review</h4>
                            <p class="card-text">Monitor and review created career paths to ensure quality and accuracy.</p>
                            <a asp-area="Admin" asp-controller="CareerPathManagement" asp-action="Index" class="btn btn-sm btn-outline-success mt-2">Review</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Styles {
    <style>
        .card {
            transition: transform 0.2s ease-in-out;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .shadow-sm {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important;
        }

        .border-0 {
            border: 0 !important;
        }
    </style>
}
